<div class="container">
<%= form_for @article do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label "Goal", :class => "form_question" %><br>
    <%= f.text_field :title, :autocapitalize => "words", :class =>"form_answer form-control margin-auto text-center halign", :required => true, :placeholder => "eg. Climb the Eiffel Tower!" %>
  </p>
 
  <p>
    <%= f.label "Description" , :class => "form_question" %><br>
    <%= f.text_area :text, :class =>"form_answer form-control margin-auto text-center halign", :id =>"form_descriptionanswer" %>
  </p>
  
  <p>
    <%= f.label "Target Completion Date" , :class => "form_question" %><br>
     <%= f.date_field :date, :required => true, :placeholder => 'dd/mm/yyyy', :class => "form_answer form-control text-center halign" %>
</p>

 
<p>
  <%= f.label "Category", :class => "form_question" %><br>
  <%= f.select :category, options_for_select([['Food', 'Food'], ['Places', 'Places'], ['Activities', 'Activities']]), :class =>"form-control text-center halign" %>
</p>

<p>
   <%= f.label "Upload a picture", :class => "form_question" %></p>
<div id="div_picture_response">
  <%= f.file_field :picture, :id => "picture_response", :class =>"margin-auto text-center halign" %>
</div>
  
  <p>
    <%= link_to 'Back', articles_path, :class => "btn btn-default" %>
    <%= f.submit "Save", :class => "btn btn-primary", :id => "save_button" %>
  </p>
 <br>
<% end %>
</div>